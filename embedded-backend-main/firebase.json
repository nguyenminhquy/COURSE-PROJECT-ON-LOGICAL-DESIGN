{
  "functions": [
    {
      "source": ".",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        ".env",
        "firebase-debug.log",
        "reqLog.txt",
        "*.log",
        "*.local",
        "logs/"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "database": { "port": 9000 },
    "ui": { "enabled": true, "port": 4500 }
  }
}